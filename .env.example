# Database Configuration
# MySQL (default)
DB_URL=jdbc:mysql://your-db-host:3306/synapse?useSSL=true&serverTimezone=UTC&allowPublicKeyRetrieval=true
DB_USERNAME=root
DB_PASSWORD=your-secure-password

# PostgreSQL (better performance, requires adding postgres driver to pom.xml)
# DB_URL=jdbc:postgresql://your-db-host:5432/synapse
# DB_USERNAME=postgres
# DB_PASSWORD=your-secure-password

# Managed databases (AWS RDS, Google Cloud SQL, etc.)
# Example AWS RDS MySQL:
# DB_URL=jdbc:mysql://synapse-db.xxxxx.us-east-1.rds.amazonaws.com:3306/synapse?useSSL=true&serverTimezone=UTC
# Example Google Cloud SQL MySQL:
# DB_URL=jdbc:mysql://google?cloudSqlInstance=project:region:instance&databaseName=synapse&socketFactoryClass=com.google.cloud.sql.mysql.SocketFactory

# JPA Configuration (optional, default: update)
# Use "validate" in production if schema is managed separately
DDL_AUTO=validate

# JWT Configuration
JWT_SECRET=your-256-bit-secret-key-here-make-it-long-enough-for-hs256

# Server Configuration (optional)
APP_PORT=8080
CORS_ALLOWED_ORIGINS=https://your-domain.com
